[package]
name = "ra_ap_ide"
version = "0.0.91"
description = "TBD"
license = "MIT OR Apache-2.0"
edition = "2021"
rust-version = "1.57"

[lib]
doctest = false

[dependencies]
cov-mark = "2.0.0-pre.1"
either = "1.5.3"
itertools = "0.10.0"
tracing = "0.1"
rustc-hash = "1.1.0"
oorandom = "11.1.2"
pulldown-cmark-to-cmark = "7.1"
pulldown-cmark = { version = "0.8.0", default-features = false }
url = "2.1.1"
dot = "0.1.4"

stdx = { path = "../stdx", version = "=0.0.91", package = "ra_ap_stdx" }
syntax = { path = "../syntax", version = "=0.0.91", package = "ra_ap_syntax" }
text_edit = { path = "../text_edit", version = "=0.0.91", package = "ra_ap_text_edit" }
ide_db = { path = "../ide_db", version = "=0.0.91", package = "ra_ap_ide_db" }
cfg = { path = "../cfg", version = "=0.0.91", package = "ra_ap_cfg" }
profile = { path = "../profile", version = "=0.0.91", package = "ra_ap_profile" }
ide_assists = { path = "../ide_assists", version = "=0.0.91", package = "ra_ap_ide_assists" }
ide_diagnostics = { path = "../ide_diagnostics", version = "=0.0.91", package = "ra_ap_ide_diagnostics" }
ide_ssr = { path = "../ide_ssr", version = "=0.0.91", package = "ra_ap_ide_ssr" }
ide_completion = { path = "../ide_completion", version = "=0.0.91", package = "ra_ap_ide_completion" }

# ide should depend only on the top-level `hir` package. if you need
# something from some `hir_xxx` subpackage, reexport the API via `hir`.
hir = { path = "../hir", version = "=0.0.91", package = "ra_ap_hir" }

[dev-dependencies]
test_utils = { path = "../test_utils", package = "ra_ap_test_utils" }
expect-test = "1.2.0-pre.1"
