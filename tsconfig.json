{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "module": "esnext",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "node",
        "target": "esnext",
        "lib": [
            "dom",
            "esnext",
            "es2017.object"
        ],
        "jsx": "react",
        "declaration": true,
        "removeComments": false,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./src/**/*",
        "types"
    ],
    "exclude": [
        "./templates/**/*"
    ]
}